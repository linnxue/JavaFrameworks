<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<context:component-scan base-package="com.spring.pojo"></context:component-scan>

	<bean name="car1" class="com.spring.pojo.Car">
		<property name="name" value="小黄车"></property>
		<property name="color" value="yellow"></property>
	</bean>
	
	<bean name="car2" class="com.spring.pojo.Car">
		<property name="name" value="小蓝车"></property>
		<property name="color" value="blue"></property>
	</bean>


</beans>


